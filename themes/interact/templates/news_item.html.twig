{% embed 'partials/base.html.twig' %}

	{% set blog_url = page.parent.url %}
    {% set feed_url = blog_url %}

    {% if blog_url == '/' %}
        {% set blog_url = '' %}
    {% endif %}

    {% if blog_url == base_url_relative %}
        {% set feed_url = blog_url~'/'~page.parent.slug %}
    {% endif  %}

	{% block content %}
		
		<div class="uk-grid">
			<div class="uk-width-4-5 uk-hidden-small">

				{% if config.plugins.breadcrumbs.enabled %}
					{% include 'partials/breadcrumbs.html.twig' %}
				{% endif %}
			    {% include 'partials/news_item.html.twig' with {'truncate':false,'big_header':true} %}
			   
			</div>
			<div class="uk-width-1-5 uk-hidden-small">
				<div data-uk-sticky="{top:65, boundary:true}">
				{% include 'partials/sidebar.html.twig' %}
			</div>
			</div>
			<div class="uk-width-1-1 uk-hidden-medium uk-hidden-large">

				{% if config.plugins.breadcrumbs.enabled %}
					{% include 'partials/breadcrumbs.html.twig' %}
				{% endif %}
			    {% include 'partials/news_item.html.twig' with {'truncate':false,'big_header':true} %}
			</div>
			<div class="uk-width-1-1 uk-hidden-medium uk-hidden-large">
				{% include 'partials/sidebar.html.twig' %}
			</div>

		</div>
		<p class="uk-clearfix">
			<br>
		</p>
	{% endblock %}

{% endembed %}
