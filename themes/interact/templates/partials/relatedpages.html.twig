<div class="uk-grid uk-grid-small" >
    <div class="uk-width-1-1">
            <div class="uk-width-1-1">
                <div class="uk-grid-width-small-1-1 uk-grid-width-medium-1-2 uk-grid-width-large-1-3 tm-grid-heights" data-uk-grid="{gutter: 20}" data-uk-grid-match="{target:'.uk-panel'}">
                    {% for related_path, score in related_pages %}
                        {% set related = grav['pages'].get(related_path) %}
                        {% if related %}                          
                            <div>
                                <div class="uk-panel uk-panel-hover">
                                    {% if related.taxonomy.category|first %}
                                        <div class="uk-panel-badge">
                                            <a class="uk-badge" href="{{ blog_url }}/category:{{ related.taxonomy.category|first }}">{{ related.taxonomy.category|first }}</a>
                                        </div> 
                                    {% endif %}



                                    {% if related.header.link %}
                                        <h3 class="uk-panel-title">
                                            {% if related.header.continue_link is not sameas(false) %}
                                            <a href="{{ related.url }}"><i class="uk-icon-{{ config.themes.library.daringLinkIcon }}"></i></a>
                                            {% endif %}
                                            <a href="{{ related.header.link }}">{{ related.title }}</a>
                                        </h3>
                                    {% else %}
                                        <h3 class="uk-panel-title"><a href="{{ related.url }}" title="{{ related.title }}">{{ related.title }}</a></h3>
                                    {% endif %}




                                    <p>{{ related.summary }}</p>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                </div>
            </div>
        </div>
</div>
